        <item-set name="groups">
            <label>Robots group</label>
            <occurrences minimum="0" maximum="0" />
            <items>
                <input name="userAgent">
                    <label>User-agent</label>
                    <occurrences minimum="0" maximum="0" />
                </input>
                <input name="allow" type="TextLine">
                    <label>Allow</label>
                    <occurrences minimum="0" maximum="0" />
                </input>
                <input name="disallow" type="TextLine">
                    <label>Disallow</label>
                    <occurrences minimum="0" maximum="0" />
                </input>
            </items>
        </item-set>
        <input name="sitemap" type="TextLine">
            <label>Sitemap url</label>
            <occurences minimum="0" maximum="0" />
        </input>
    </form>
    <mappings>
        <mapping controller="/services/robotstxt/robotstxt.js" order="10">
            <pattern>/robots\.txt</pattern>
        </mapping>
    </mappings>
</site>
